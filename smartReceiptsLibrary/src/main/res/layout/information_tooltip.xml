<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/Widget.SmartReceipts.RelativeLayout.Button.Secondary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_margin_size"
        android:layout_alignParentEnd="true"
        android:tint="@color/text_primary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:srcCompat="@drawable/ic_clear_24dp" />

    <TextView style="@style/Widget.SmartReceipts.TextView.Button.Secondary"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_margin_size"
        android:layout_toEndOf="@id/error_icon"
        android:layout_toStartOf="@id/close_icon"
        android:ellipsize="end" />

</RelativeLayout>